<h2>the black book</h2>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          username
        </th>

        <th>
          profile pic
        </th>

        <th>
          to profile
        </th>
      </tr>
      <% @user_list.each do |the_thing| %>
      <tr>
        <td>
          <%= the_thing.username %>
        </td>
        <td>
          <img src= "<%= the_thing.user_profile_pic%>" class="img-responsive">
        </td>
        <% if session.fetch(:user_id) == the_thing.id %>
        <td>
        <a href="/myfits">
          to profile</a>
        </td>
        <%else%>
        <td>
          <a href="/profile/<%= the_thing.id %>">
          to profile
          </a>
        </td>
      <%end%>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
