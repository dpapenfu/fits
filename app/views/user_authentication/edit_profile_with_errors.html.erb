<div >
  <h5>
    Edit User Account
  </h5>

  <% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/modify_user" method="post">
              
      <div>
        <label for="email_box">Email</label>
          
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
          
      </div>
                                    
      <div>
        <label for="username_box">Username</label>
          
        <input id="username_box" name="query_username" value="<%= @current_user.username %>">
          
      </div>
       
       <div>
        <label for="private_box">Private Account?</label>
        <input id="private_box" name="query_private" type="checkbox" value="1">
      </div>             
      
      <div>
        <label for="mobile_box">Mobile</label>
          
        <input id="mobile_box" name="query_mobile" value="<%= @current_user.mobile %>">
          
      </div>
                      
  <div>
    <label for="user_profile_pic_box">User profile pic</label>
      
    <input type="file" id="user_profile_pic_box" class="form-control" name="query_user_profile_pic">
  </div>      
 
                      
              
      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a new password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your new password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
