<div>
  <div>
    <h1>
      <%=@profile_own.username%>
    </h1>
  </div>
</div>

<hr>

  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Caption
        </th>

        <th>
          Image
        </th>

        <th>
          Location
        </th>

        <th>
          Likes count
        </th>

        <th>
          Comments count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        Show details
        </th>
      </tr>

      <% @pics.each do |a_photo| %>
      <tr>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <img src= "<%= a_photo.image %>" class="img-responsive">
        </td>

        <td>
          <%= a_photo.location %>
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <%= a_photo.comments_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photo.updated_at) %> ago
        </td>
        <td>
        <a href = "/photos/<%= a_photo.id%>">
        Show details </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
