<div>
  <div>
 <a href="/add_photo">
    <i class="fa-thin fa-plus" alt="Add a new fit"> </i>
 

      <button>
        add a new fit</button>
    </a>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>


        <th>
          Owner
        </th>
        <th>
          Image
        </th>
        <th>
          Caption
        </th>


        <th>
          Location
        </th>

        <th>
          Likes count
        </th>

        <th>
          Comments count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
       
      <tr>
      <% if MootsRequest.where(:sender_id => @current_user.id).where(:recipient_id=>a_photo.owner_id).where(:status=>true).first != nil%>    


        <td>
          
          <%= a_photo.owner.username %>
        </td>
        <td><a href = "photos/<%=a_photo.id%>">
          <img src= "<%= a_photo.image %>" class="img-responsive"></a>
        </td>
                  <td>
          <%= a_photo.caption %>
        </td>


        <td>
          <%= a_photo.location %>
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <%= a_photo.comments_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photo.updated_at) %> ago
        </td>
        </td>
      <%else %>
      <% end %>
      </tr>

      <% end %>
    </table>
  </div>
</div>

